<!DOCTYPE html>
<html ng-app="zenergyApp">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body ng-controller="mainController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class = "navbar-brand" href="#/">Zenergy</a>
            </div>
            <div  class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/">Home</a></li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
                <ul ng-show="isAuthanticated()" class="nav navbar-nav navbar-right">
                    <li><a href="#Profile">Profile</a></li>
                    <li><a  href="#/" ng-click="logoff()">Log Off</a></li>
                </ul>
                <ul ng-hide="isAuthanticated()" class="nav navbar-nav navbar-right" >
                    <li><a href="#Login">Login</a></li>
                    <li><a href="#Register">Create account</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Zenergy IG5 - Ana Maria - Lyvia - Antoine - Clément - Damien</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/zenergyApp")
    @Scripts.Render("~/bundles/angular-resource")
    @Scripts.Render("~/bundles/angular-route")
    @RenderSection("scripts", required: false)
</body>
</html>
